@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<partial name="_StatusMessage" model="Model.UserChangeLimitStatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.FirstName" class="form-control" placeholder="First Name"  />
                <label asp-for="Input.FirstName" class="form-label"></label>
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.LastName" class="form-control" placeholder="Last Name" />
                <label asp-for="Input.LastName" class="form-label"></label>
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Username" class="form-control" placeholder="Username" />
                <label asp-for="Input.Username" class="form-label"></label>
                <span asp-validation-for="Input.Username" class="test-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Phone Number"/>
                <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Biography" class="form-control" placeholder="Bio" />
                <label asp-for="Input.Biography" class="form-label"></label>
                <span asp-validation-for="Input.Biography" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.AccessibilityNeeds" class="form-control" placeholder="Accessibility Needs" />
                <label asp-for="Input.AccessibilityNeeds" class="form-label"></label>
                <span asp-validation-for="Input.AccessibilityNeeds" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.DateOfBirth" class="form-control" placeholder="Date of birth" />
                <label asp-for="Input.DateOfBirth" class="form-label"></label>
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Address" class="form-control" placeholder="Address" />
                <label asp-for="Input.Address" class="form-label"></label>
                <span asp-validation-for="Input.Address" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.EmergencyContact" class="form-control" placeholder="Emergency Contact" />
                <label asp-for="Input.EmergencyContact" class="form-label"></label>
                <span asp-validation-for="Input.EmergencyContact" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PassportNumber" class="form-control" placeholder="Passport Number" />
                <label asp-for="Input.PassportNumber" class="form-label"></label>
                <span asp-validation-for="Input.PassportNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.SeatPreference" class="form-control" placeholder="Airplane Seat Preference" />
                <label asp-for="Input.SeatPreference" class="form-label"></label>
                <span asp-validation-for="Input.SeatPreference" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.RewardsProgram" class="form-control" placeholder="Rewards Program" />
                <label asp-for="Input.RewardsProgram" class="form-label"></label>
                <span asp-validation-for="Input.RewardsProgram" class="text-danger"></span>
            </div>


            <div class="col-md-6">

                <div class="form-group">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <label asp-for="Input.ProfilePicture" style="width: 100%"></label>
                    @if (Model.Input.ProfilePicture != null)
                    {
                        <img id="profilePicture" style="width: 350px; height:350px; object-fit:cover"
                             src="data:image/*;base64,@(Convert.ToBase64String(Model.Input.ProfilePicture))" />
                    }
                    else
                    {
                        <img id="profilePicture" style="width: 350px; height:350px; object-fit:cover" src="" />
                    }
                    <input type="file"
                           accept=".png,.jpg,.jpeg,.gif,.tif"
                           asp-for="Input.ProfilePicture"
                           class="form-control"
                           style="border:0px!important; padding:0px; padding-top:10px; padding-bottom:30px;"
                           onchange="document.getElementById('profilePicture').src= window.URL.createObjectURL(this.files[0])" />

                    <span asp-validation-for="Input.ProfilePicture" class="text-danger"></span>
                </div>

            </div>

            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
