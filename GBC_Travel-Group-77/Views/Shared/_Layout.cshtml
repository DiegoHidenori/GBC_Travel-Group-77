<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GBC_Travel_Group_77</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GBC_Travel_Group_77.styles.css" asp-append-version="true" />
    <link href='https://fonts.googleapis.com/css?family=Work+Sans' rel='stylesheet' type='text/css'>
</head>
<body>
    <div class="container">

        <header>
            <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-primary" aria-label="Travel Platform">
                <div class="container-xl">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <img src="~/img/main/COMP2139Image.svg" width="151" height="47" class="d-inline-block align-top mb-2 mt-1" alt="TravelLogo">
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                            aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a asp-controller="Home" asp-action="Index" class="nav-link">Home</a>
                            </li>

                            <partial name="_CategoryMenu.cshtml" />

                            <li>
                                <a asp-controller="Contact" asp-action="Index" class="nav-link">Contact</a>
                            </li>
                            <li>
                                <a asp-controller="AddFlight" asp-action="Add" class="nav-link">
                                    Add Flight
                                </a>
                            </li>
                            <li>
                                <a asp-controller="AddHotel" asp-action="Add" class="nav-link">
                                    Add Hotel
                                </a>
                            </li>
                            <li>
                                <a asp-controller="AddCar" asp-action="Add" class="nav-link">
                                    Add Car
                                </a>
                            </li>
                            <li>
                                <a asp-controller="ShoppingCart" asp-action="Index" class="nav-link">
                                    My cart
                                </a>
                            </li>
                        </ul>

                        <!-- Search Form -->
                        <form class="d-flex" asp-controller="SearchItem" asp-action="Index" method="get">
                            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="keyWord">
                            <button class="btn btn-outline-light" type="submit">Search</button>
                        </form>


                        <!-- Icon for shopping cart -->


                        <vc:shopping-cart-summary></vc:shopping-cart-summary>
                    </div>
                </div>
            </nav>


        </header>

        @RenderBody()
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
